{
    "name": "rudashi/fluent-regex",
    "description": "Elegant way for PHP regex",
    "version": "2.0.0",
    "license": "MIT",
    "keywords": [
        "php",
        "regex",
        "preg"
    ],
    "authors": [
        {
            "name": "Borys Å»muda",
            "email": "rudashi@gmail.com",
            "homepage": "https://rudashi.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^1.0",
        "rector/rector": "^1.0",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Rudashi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "profile": "pest --profile",
        "coverage": "pest --coverage --testsuite=unit",
        "test:pint": "php-cs-fixer check src --show-progress=dots -vvv",
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse",
        "test:arch": "pest --filter=arch",
        "test:unit": "pest --testsuite=unit",
        "test:integration": "pest --testsuite=integration",
        "test": [
            "@test:pint",
            "@test:refactor",
            "@test:types",
            "@test:arch",
            "@test:unit",
            "@test:integration"
        ]
    }
}